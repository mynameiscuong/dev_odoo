<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_student_list">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Logo và thông tin trường -->
                    <div>
                        <img t-att-src="'/school_management/static/src/img/logo.png'" style="width: 100px;" />
                        <h2>Danh Sách Sinh Viên</h2>
                    </div>
                    <!-- Bảng danh sách sinh viên -->
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Sinh Viên</th>
                                <th>Tuổi</th>
                                <th>Trường</th>
                                <th>Lớp</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="student">
                                <tr>
                                    <td t-esc="student.id"/>
                                    <td t-esc="student.name"/>
                                    <td t-esc="student.age"/>
                                    <td t-esc="student.school_ids.name"/>
                                    <td t-esc="student.class_id.name"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>