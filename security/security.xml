<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Tạo danh mục phân quyền -->
        <record id="school_management_category" model="ir.module.category">
            <field name="name">School Management</field>
        </record>
        <record id="group_teacher_school" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="school_management.school_management_category"/>
        </record>
        <record id="group_student_school" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="school_management.school_management_category"/>
        </record>
        <record id="teacher_rule_own_records" model="ir.rule">
            <field name="name">Teacher</field>
            <field name="model_id" ref="school_management.model_ct_student"/>
            <!-- <field name="domain_force">[('create_uid', '=', user.id)]</field> -->
            <field name="groups" eval="[(4, ref('school_management.group_teacher_school'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <record id="student_rule_own_records" model="ir.rule">
            <field name="name">Student: Own Records Only</field>
            <field name="model_id" ref="school_management.model_ct_student"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('school_management.group_student_school'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>