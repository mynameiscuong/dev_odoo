<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action mở danh sách Trường học -->
        <record id="ct_school_action" model="ir.actions.act_window">
            <field name="name">schools</field>
            <field name="res_model">ct.school</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Action mở danh sách Sinh viên -->
        <record id="ct_student_action" model="ir.actions.act_window">
            <field name="name">students</field>
            <field name="res_model">ct.student</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="ct_classs_action" model="ir.actions.act_window">
            <field name="name">classs</field>
            <field name="res_model">ct.classs</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Tree View cho School -->
        <record id="ct_school_view_tree" model="ir.ui.view">
            <field name="name">ct.school.view.tree</field>
            <field name="model">ct.school</field>
            <field name="arch" type="xml">
                <tree string="Schools">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- Tree View cho Student -->
        <record id="ct_student_view_tree" model="ir.ui.view">
            <field name="name">ct.student.view.tree</field>
            <field name="model">ct.student</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="age"/>
                    <field name="class_id"/>
                    <field name="enrollment_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- Form View cho Student -->
        <record id="ct_student_view_form" model="ir.ui.view">
            <field name="name">ct.student.view.form</field>
            <field name="model">ct.student</field>
            <field name="arch" type="xml">
                <form string="Student Form">
                    <sheet>
                        <group class="oe_title">
                            <field name="name" class="oe_inline"/>
                        </group>
                        <group class="oe_title">
                            <field name="email" class="oe_inline"/>
                        </group>
                        <group>
                            <group>
                                <field name="age" class="oe_highlight"/>
                                <field name="class_id"/>
                                <field name="enrollment_date" class="oe_highlight"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Thêm Tree View cho Class -->
        <record id="ct_classs_view_tree" model="ir.ui.view">
            <field name="name">ct.classs.view.tree</field>
            <field name="model">ct.classs</field>
            <field name="arch" type="xml">
                <tree string="Classes">
                    <field name="name"/>
                    <field name="school_name"/>
                    <field name="average_age"/>
                </tree>
            </field>
        </record>
        <!-- Thêm Form View cho Class -->
        <record id="ct_classs_view_form" model="ir.ui.view">
            <field name="name">ct.classs.view.form</field>
            <field name="model">ct.classs</field>
            <field name="arch" type="xml">
                <form string="Class Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="school_id"/>
                            <field name="average_age" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="age"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>