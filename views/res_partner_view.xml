<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_view_form_student_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.student.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="is_student"/>
                    <field name="student_id" domain="[('id', '=', student_id)]"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>