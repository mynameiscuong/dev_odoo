<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_student_welcome" model="mail.template">
            <field name="name">Welcome Student Email</field>
            <field name="model_id" ref="school_management.model_ct_student"/>
            <field name="subject">Chào mừng sinh viên mới: {{object.name}}</field>
            <field name="email_from">{{(object.env.user.email or 'admin@example.com')}}</field>
            <field name="email_to">{{object.email}}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590">
                    <tr>
                        <td valign="top" style="padding: 0px 10px;">
                            <div style="font-size: 13px; margin: 0px; padding: 0px;">
                                <p>Hello Dear
                                    <t t-out="object.name"/>
                                </p>
                                <p>Email:
                                    <t t-out="object.email"/>
                                </p>
                                <p>Age:
                                    <t t-out="object.age"/>
                                </p>
                                <p>class:
                                    <t t-out="object.class_id.name"/>
                                </p>
                                <br/>
                                <p>Thank You .</p>
                            </div>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
    </data>
</odoo>